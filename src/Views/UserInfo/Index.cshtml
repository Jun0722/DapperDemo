<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/jquery-easyui/themes/default/easyui.css" />
    <link rel="stylesheet" href="~/lib/jquery-easyui/themes/icon.css" />
    <script src="~/lib/jquery-easyui/jquery.min.js"></script>
    <script src="~/lib/jquery-easyui/jquery.easyui.min.js"></script>
    <script src="~/lib/jquery-easyui/local/easyui-lang-zh_CN.js"></script>

</head>
<body>

    <div>
        <table>
            <tr>
                <th><p>Id</p></th>
                <th><p>UserName</p></th>
                <th><p>UserPwd</p></th>
                <th><p>RegTime</p></th>
                <th><p>Email</p></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayName(item.Id.ToString())</td>
                    <td>@Html.DisplayName(item.UserName)</td>
                    <td>@Html.DisplayName(item.UserPwd)</td>
                    <td>@Html.DisplayName(String.Format("{0:MM/dd/yyyy}", item.RegTime))</td>
                    <td>@Html.DisplayName(item.Email)</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.Id })</td>
                    <td>@Html.ActionLink("delete", "delete", new { id = item.Id })</td>
                </tr>
            }


        </table>

    </div>

</body>
</html>


